<?xml version="1.0"?>
<layout version="0.1.0">
    
    <!-- Product page -->
    <catalog_product_view>        
        <reference name="head">
            <!-- CSS -->
            <action method="addItem" ifconfig="zoom/general/enable"><type>js_css</type><name>smartwave/jquery/plugins/owl.carousel/assets/owl.carousel.css</name></action>
            <action method="addItem" ifconfig="zoom/general/enable"><type>js_css</type><name>smartwave/jquery/plugins/owl.carousel/assets/animate.css</name></action>
            <action method="addItem" ifconfig="zoom/lightbox/lb_enable"><type>js_css</type><name>smartwave/jquery/plugins/fancybox/jquery.fancybox.css</name></action>
            <action method="addItem" ifconfig="zoom/general/enable"><type>skin_css</type><name>zoom/css/style.css</name></action>
            <!-- js -->
            <action method="addJs"><script>smartwave/jquery/jquery-1.11.2.min.js</script></action>
            <action method="addJs"><script>smartwave/jquery/jquery-noconflict.js</script></action>          
            <action method="addJs" ifconfig="zoom/general/enable"><script>smartwave/jquery/plugins/owl.carousel/owl.carousel.min.js</script></action>
            <action method="addJs" ifconfig="zoom/general/enable"><script>smartwave/jquery/plugins/elevate/jquery.elevatezoom.js</script></action>
            <action method="addJs" ifconfig="zoom/lightbox/lb_enable"><script>smartwave/jquery/plugins/fancybox/jquery.fancybox.js</script></action>
            <action method="addItem" ifconfig="zoom/general/enable"><type>skin_js</type><name>zoom/js/imagesloaded.js</name></action>
            <action method="addItem" ifconfig="zoom/general/enable"><type>skin_js</type><name>zoom/js/zoom.js</name></action>
        </reference>
        
        <reference name="product.info.media">
            <action method="setTemplate" ifconfig="zoom/general/enable"><template>smartwave/zoom/product/view/media.phtml</template></action>
        </reference>
    </catalog_product_view>
